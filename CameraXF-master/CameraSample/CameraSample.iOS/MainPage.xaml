<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CameraSample.iOS.MainPage">
	<ContentPage.Content>
        <StackLayout>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="120" />

        </Grid.ColumnDefinitions>

        <Label x:Name="English_title" Text="English" Grid.Row="2" Grid.Column="1" FontSize="25" TextColor="White"  BackgroundColor="#0000ff" WidthRequest="100"/>
        <Label x:Name="Spanish_title" Text="Spanish" Grid.Row="5" Grid.Column="1" FontSize="25" TextColor="Red" BackgroundColor="#FFF000" Margin="-70, -5, 20, -10"/>
        <Label x:Name="French_title" Text="French" Grid.Row="8" Grid.Column="1" FontSize="25" TextColor="White" BackgroundColor="#ff0000"/>
        <Label x:Name="English"  Grid.Row="3" />
        <Label x:Name="Spanish"  Grid.Row="6" />
        <Label x:Name="French"  Grid.Row="9" />
        <Button x:Name="CameraButton" Text="Take Photo" Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="3"  Clicked="Handle_Clicked" />
    </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
